                                    //-         li(class="list-inline-item m-0")
                                    //-             i class="fa fa-star text-success"
            
                        img(
                            src="https://i.imgur.com/KFojDGa.jpg" 
                            alt="Generic placeholder image" 
                            height="120" 
                            class="ml-lg-5 order-1 order-lg-2")