extends layout
block content
    
    if errors
        ul.my-errors
            for error in errors
                li= error.msg
    
    h3 Products :  
        a(href="/add/Product")
            button(type="button" class="btn btn-secondary" value="Add Product") Add product

    
    form(action="/search/Product" method="GET")
        div(class="form-check form-check-inline")
            p Category filter :
        
        div(class="form-check form-check-inline")
            select(
                type="dropDown"
                name="category"
                class="form-control"
                required
            )
                each filter in categories
                    option=filter
        div(class="form-check form-check-inline")

            input(
                type="submit"
                value="Apply filter"
                class="btn btn-secondary"
            )
        

    
    div(class="row")
        div(class="list-group shadow")
            each val in products
                p
                ul(class="list-group shadow")
                    li(class="list-group-item")
                        div(class="media align-items-lg-center flex-column flex-lg-row p-3")
                                <div class="media-body order-2 order-lg-1">

                                h5(class="mt-0 font-weight-bold mb-2")
                                    p=  val.name
                            
                                p(class="font-italic text-muted mb-0 small")= 'Calories (/100g) : ' + val.calories + ' cal'
                                
                                div(class="d-flex align-items-center justify-content-between mt-1")
                                    h6(class="font-weight-bold my-2")
                                        p= 'Cat√©gorie : ' + val.category
                                    //- ul(class="list-inline small")
