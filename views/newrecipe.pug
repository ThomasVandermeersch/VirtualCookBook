
extends layout

block content

  if errors
    ul.my-errors
      for error in errors
        li= error.msg

  form(action="/addRecipe" method="POST" class="form-registration")
    label(for="recipename") Recipe's name:
    input(
      type="text"
      name="name"
      class="form-control"
      required
    )

    label(for="time") Preparation Time (minutes):
    input(
      type="text"
      name="time"
      class="form-control"
      required
    )
    
    label(for="category") Score nutritif :
    select(
      type="dropDown"
      name="nutritiveScore"
      class="form-control"
      required
    )
      each category in ['A','B','C','D']
        option=category

    label(for="category") Cat√©gorie :
    select(
      type="dropDown"
      name="category"
      class="form-control"
      required
    )
      each category in ['Breakfast','lunch','supper','desert','snacks']
        option=category
    
    br
    br
    input(
      type="submit"
      value="Submit"
      class="btn btn-lg btn-primary btn-block"
    )

