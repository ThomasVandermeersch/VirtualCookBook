
extends layout

block content


  if errors
    ul.my-errors
      for error in errors
        li= error.msg

  form(action="/addProduct" method="POST" class="form-registration")
    label(for="productname") Product's name:
    input(
      type="text"
      name="name"
      class="form-control"
      required
    )

    label(for="calories") Calories by 100g:
    input(
      type="text"
      name="calories"
      class="form-control"
      required
    )
    
    label(for="unity") Measurement unit :
    select(
      type="dropDown"
      name="unity"
      class="form-control"
      required
    )
      each unity in ['g','mL']
        option=unity

    label(for="category") Category :
    select(
      type="dropDown"
      name="category"
      class="form-control"
      required
    )
      each category in ['Fruit','Cereal','Meat','Liquid','Spice','Other']
        option=category

    label(for="imgLink") Image link :
    input(
      type="text"
      name="imgLink"
      class="form-control"
    )
 

    input(
      type="submit"
      value="Submit"
      class="btn btn-lg btn-primary btn-block"
    )

