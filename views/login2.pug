extends layout
    


block content
  -data = data || {}

  h1 CookBook
  h2 Sign In
  
  form(action="/loginPOST" method="POST" class="form-registration")
    div(class="form-check form-check-inline")
        p Email:

        input(
        type="email"
        id="name"
        name="email"
        class="form-control"
        value=data.name
        required
        )

    div(class="form-check form-check-inline")
        p Password:
        input(
        type="password"
        id="email"
        name="password"
        class="form-control"
        value=data.email
        req
        )

    input(
      type="submit"
      value="Submit"
      class="btn btn-lg btn-primary btn-block"
    )
    if messages.error 
        p= messages.error

